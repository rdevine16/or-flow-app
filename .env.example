# ORbit Web App — Required Environment Variables
# Copy this file to .env.local and fill in the values

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App URL (used for invite links, email callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email (Resend)
RESEND_API_KEY=re_your_key_here

# Epic FHIR Integration (SMART on FHIR OAuth — server-side only)
# Client ID from Epic App Orchard registration
EPIC_CLIENT_ID=your-epic-client-id
# Client secret — NEVER expose to frontend (used only in server-side token exchange)
EPIC_CLIENT_SECRET=your-epic-client-secret
# Base URL of the Epic FHIR R4 server (used for SMART discovery + API calls)
EPIC_FHIR_BASE_URL=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4
# OAuth redirect URI — must match Epic App Orchard registration exactly
# Use ngrok URL for local dev, production URL for deployed environments
EPIC_REDIRECT_URI=http://localhost:3000/api/epic/auth/callback
